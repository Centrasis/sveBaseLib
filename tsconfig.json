{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,                       /* Allow javascript files to be compiled. */
    "lib": [
      "es6", "es2015.core", "dom"
    ],
    "composite": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true
  }, "exclude": [
    "node_modules",
    "dist"
  ]
}